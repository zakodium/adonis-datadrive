{
  "name": "adonis-datadrive",
  "version": "0.2.0",
  "description": "Extended drive provider for AdonisJs",
  "main": "./lib/providers/DataDriveProvider.js",
  "types": "./lib/src/types.d.ts",
  "keywords": ["adonisjs", "adonis", "drive", "datadrive"],
  "author": "MichaÃ«l Zasso",
  "license": "MIT",
  "files": ["lib", "templates"],
  "adonisjs": {
    "templates": {
      "basePath": "./templates",
      "config": ["datadrive.txt"]
    },
    "types": "adonis-datadrive",
    "providers": ["adonis-datadrive"]
  },
  "engines": { "node": ">=15.6.0||^14.17.0 <15" },
  "scripts": {
    "check-types": "tsc --noEmit",
    "clean": "rimraf lib",
    "eslint": "eslint src providers --cache",
    "eslint-fix": "npm run eslint -- --fix",
    "prepublishOnly": "npm run tsc",
    "test": "npm run eslint && npm run check-types",
    "test-coverage": "npm run test-only -- --coverage",
    "test-only": "jest",
    "tsc": "npm run clean && npm run tsc-cjs",
    "tsc-cjs": "tsc --project tsconfig.cjs.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zakodium/adonis-datadrive.git"
  },
  "bugs": {
    "url": "https://github.com/zakodium/adonis-datadrive/issues"
  },
  "homepage": "https://github.com/zakodium/adonis-datadrive#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@adonisjs/core": "^5.1.8",
    "@targos/adonis-drive": "^4.0.8",
    "@types/jest": "^26.0.23",
    "@zakodium/eslint-config": "^3.0.2",
    "eslint": "^7.28.0",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.3"
  },
  "dependencies": {
    "@slynova/flydrive": "^1.0.3",
    "@types/node": "^15.12.2"
  },
  "peerDependencies": {
    "@targos/adonis-drive": ">=4.0.8"
  }
}
